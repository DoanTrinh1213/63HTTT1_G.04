<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/viewCafeMain"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_view_cafe"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        tools:ignore="MissingConstraints">

        <!--        image-->
        <androidx.cardview.widget.CardView
            android:layout_width="116dp"
            android:layout_height="98dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageViewCafe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/images" />
        </androidx.cardview.widget.CardView>

        <!--        group chữ-->
        <LinearLayout
            android:id="@+id/textViewCafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCafeShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/outline_check_circle_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/yaldevi"
                android:text="Work Cafe"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCafeAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/yaldevi"
                android:text="Tầng 2, 41/26 Nguyên Hồng, \nĐống Đa, Hà Nội"
                android:textAlignment="viewStart"
                android:textColor="#000"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/yaldevi"
                    android:text="Cách bạn"
                    android:textColor="#000"
                    android:layout_marginEnd="5dp"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/textViewCafeDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/yaldevi"
                    android:text="50m"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewCafeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yaldevi"
                    android:text="Đang mở cửa"
                    android:textColor="#047709"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewCafeTimeOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/yaldevi"
                    android:text="09:00 - 23:00"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/iconBookmarkFavourite"
            android:layout_width="36dp"
            android:layout_height="47dp"
            android:layout_gravity="top"
            android:layout_marginEnd="5dp"
            android:src="@drawable/bookmark_love" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>