<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECDCDC"
    tools:layout_editor_absoluteX="-2dp"
    tools:layout_editor_absoluteY="4dp">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/yaldevi"
        android:text="Trải nghiệm của bạn về"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="612dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="121dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="33dp"
            android:fontFamily="@font/yaldevi"
            android:text="Trải nghiệm của bạn"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="147dp" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="381dp"
            android:layout_height="156dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="69dp"
            android:background="@drawable/rounded_coner_review"
            android:ems="10"
            android:inputType="textMultiLine"
            android:minLines="6"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="175dp" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="381dp"
            android:layout_height="156dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="276dp"
            android:background="@drawable/rounded_coner_review"
            android:ems="10"
            android:inputType="text"
            android:minLines="6"
            android:text="Chọn ảnh từ thư viện"
            android:textColor="#B1B0B0"
            android:textSize="12dp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="175dp"
            android:gravity="center"
            android:drawableTop="@drawable/add_photo"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/yaldevi"
            android:text="Hình ảnh"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="147dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="381dp"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="62dp"
            android:background="@drawable/btn_tick_cafe"
            android:fontFamily="@font/yaldevi"
            android:text="Để lại trải nghiệm của bạn"
            android:textAllCaps="false"
            app:cornerRadius="50dp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15">

        <RatingBar
            android:layout_marginStart="-55dp"
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:progressTint="@android:color/holo_orange_dark"
            android:progressBackgroundTint="#818080"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yaldevi"
        android:text="Hầm trú ẩn (Hoàng Ngọc Phách)"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>
