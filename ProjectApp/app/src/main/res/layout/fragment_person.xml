<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFCBCB"
    android:fontFamily="@font/yaldevifont"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/lnEditInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1000dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/userImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/circle_background"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/black"
                android:contentDescription="TODO"
                android:src="@drawable/usernone" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yaldevi"
                android:text="Jimmy"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/yaldevi"
                android:text="di cafe khong"
                android:textColor="#000000" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/arrowEditInformation"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#000000"
            app:srcCompat="@drawable/baseline_edit_square_24" />


    </LinearLayout>

    <TextView
        android:id="@+id/txtKhac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:fontFamily="@font/yaldevi"
        android:text="Khác"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_layout"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtKhac"
        app:layout_constraintVertical_bias="0.049"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/lnContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iconContact"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:backgroundTint="#000000"
                app:srcCompat="@drawable/baseline_headset_mic_24"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/txtContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yaldevi"
                android:text="Liên hệ với chúng tôi"
                android:textColor="#000000"
                android:textSize="16dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/arrowContact"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnInformationApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iconInfor"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:backgroundTint="#000000"
                app:srcCompat="@drawable/round_error_24" />

            <TextView
                android:id="@+id/txthongtinud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yaldevi"
                android:text="Thông tin ứng dụng"
                android:textColor="#000000"
                android:textSize="16dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/arrowInformationApp"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#000000"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/iconLogOut"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:backgroundTint="#000000"
                app:srcCompat="@drawable/baseline_logout_24" />

            <TextView
                android:id="@+id/txtLogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yaldevi"
                android:text="Đăng xuất"
                android:textColor="#000000"
                android:textSize="16dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/arrowLogOut"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#000000"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTinhnang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/yaldevi"
        android:text="Tính năng"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnEditInformation"
        tools:ignore="DuplicateIds" />

    <LinearLayout
        android:id="@+id/lnDeleteAcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_layout"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="5dp"
        app:layout_constraintBottom_toTopOf="@+id/txtKhac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTaiKhoan"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/iconDelete"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:backgroundTint="#000000"
            app:srcCompat="@drawable/baseline_delete_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yaldevi"
            android:text="Xóa tài khoản"
            android:textColor="#000000"
            android:textSize="16dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/arrowDeleteAcount"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#000000"
            app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_layout"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/txtTaiKhoan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTinhnang"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/lnCafeContribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iconDonggop"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:backgroundTint="#000000"
                app:srcCompat="@drawable/baseline_brightness_medium_24"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/txtv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yaldevi"
                android:text="Quán bạn đã đóng góp"
                android:textColor="#000000"
                android:textSize="16dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/arrowCafeContribute"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#000000"
                app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnContributeCafeInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iconTTQuan"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:backgroundTint="#000000"
                app:srcCompat="@drawable/baseline_insert_drive_file_24" />

            <TextView
                android:id="@+id/txtDonggopthongtinquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yaldevi"
                android:text="Đóng góp thông tin quán"
                android:textColor="#000000"
                android:textSize="16dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/arrowContributeCafeInformation"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#000000"
                app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtTaiKhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:fontFamily="@font/yaldevi"
        android:text="Tài khoản"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--  Xóa tài khoản-->

</androidx.constraintlayout.widget.ConstraintLayout>