<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:id="@+id/linearViewCafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_view_cafe"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <!--        image-->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageViewCafe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/images"/>
        </androidx.cardview.widget.CardView>

        <!--        group chữ-->
        <LinearLayout
            android:id="@+id/textViewCafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:minWidth="135dp">

            <TextView
                android:id="@+id/textViewCafeShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/outline_check_circle_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/yaldevi"
                android:text="Le quang thanh"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxWidth="125dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCafeAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/yaldevi"
                android:text="Tầng 2, 41/26 Nguyên Hồng, \nĐống Đa, Hà Nội"
                android:maxLines="2"
                android:maxWidth="125dp"
                android:ellipsize="middle"
                android:textAlignment="viewStart"
                android:textColor="#000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCafeDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/yaldevi"
                    android:text="Cách bạn 50m"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewCafeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yaldevi"
                    android:text="Đang mở cửa"
                    android:textColor="#047709"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewCafeTimeOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/yaldevi"
                    android:text="09:00 - 23:00"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/iconBookmark"
            android:layout_width="32dp"
            android:layout_height="43dp"
            android:layout_gravity="top"
            android:layout_marginStart="20dp"
            android:src="@drawable/round_bookmark_border_24" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>