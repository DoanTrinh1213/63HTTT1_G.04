<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yaldevi"
        android:text="Bằng việc tiếp tục, bạn đã đồng ý với "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/serviceRules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điều khoản dịch vụ"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintBaseline_toBaselineOf="@id/textView21"
        app:layout_constraintStart_toEndOf="@id/textView21" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" và "
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@id/serviceRules"
        app:layout_constraintStart_toEndOf="@id/serviceRules" />

    <TextView
        android:id="@+id/policyPrivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Chính sách bảo mật"
        android:textSize="14dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/textViewEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" của chúng tôi"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@id/policyPrivate"
        app:layout_constraintStart_toEndOf="@id/policyPrivate" />
</androidx.constraintlayout.widget.ConstraintLayout>
