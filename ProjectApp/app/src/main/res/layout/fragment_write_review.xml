<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WriteReview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECDCDC"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/yaldevi"
        android:text="Trải nghiệm của bạn về"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="612dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/yaldevi"
            android:text="Trải nghiệm của bạn"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="147dp" />

        <EditText
            android:id="@+id/editTextExperience"
            android:layout_width="385dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textView16"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_coner_review"
            android:ems="10"
            android:gravity="top|start"
            android:hint="Trải nghiệm của bạn"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="#A6A2A2"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <LinearLayout
            android:gravity="top|start"
            android:id="@+id/linearLayoutImage"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:layout_below="@+id/textView17"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="101dp"
            android:background="@drawable/rounded_coner_review"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="91dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/PickImageCafe"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/pick"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="1dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:clickable="true"
                        android:contentDescription="TODO"
                        android:focusable="true"
                        android:tint="#ffffff"
                        app:backgroundTint="#AFAEAE"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/baseline_image_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pick"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/yaldevi"
                        android:text="Chọn ảnh"
                        android:textColor="@color/black">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pick"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/yaldevi"
                        android:text="Chọn ảnh"
                        android:textColor="@color/black">

                    </TextView>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/deletepick"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="1dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:clickable="true"
                        android:contentDescription="TODO"
                        android:focusable="true"
                        android:tint="#ffffff"
                        app:backgroundTint="#AFAEAE"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/delete_logput" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/deletepick"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/yaldevi"
                        android:text="Xóa tất cả"
                        android:textColor="@color/black">

                    </TextView>


                </RelativeLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="8dp"
                android:id="@+id/recyclerViewGalleryImages"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextExperience"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/yaldevi"
            android:text="Hình ảnh"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/editTextExperience"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="147dp" />

        <Button
            android:id="@+id/btnExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/yaldevi"
            android:text="Để lại trải nghiệm của bạn"
            android:textAllCaps="false"
            android:theme="@style/ButtonRegis"
            app:cornerRadius="50dp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNameShop">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:numStars="5"
            android:progressBackgroundTint="#818080"
            android:progressTint="@android:color/holo_orange_dark"
            android:rating="5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:stepSize="0.5"
            app:layout_constraintTop_toBottomOf="@+id/textNameShop" />

    </LinearLayout>

    <TextView
        android:id="@+id/textNameShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yaldevi"
        android:text="Hầm trú ẩn (Hoàng Ngọc Phách)"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/iconClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>
