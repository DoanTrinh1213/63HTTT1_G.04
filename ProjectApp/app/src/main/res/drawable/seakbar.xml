<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Phần nền chạy -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#000000" /> <!-- Màu đen cho nền chạy -->
        </shape>
    </item>

    <!-- Phần kéo -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#00FF00" /> <!-- Màu xanh lá cây cho phần kéo -->
            </shape>
        </clip>
    </item>
</layer-list>